{
  "name": "@luckymachines/hexploration-cli",
  "version": "0.0.1",
  "description": "A CLI to play Hexploration",
  "main": "dist/cli.cjs",
  "bin": {
    "@luckymachines/hexploration-cli": "bin/hexploration-cli",
    "hexploration-cli": "dist/cli.cjs",
    "hexploration-cli-local": "bin/hexploration-cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "import-addresses": "node scripts/import-addresses.js",
    "build": "esbuild src/cli.js --bundle --platform=node --outfile=dist/cli.cjs --define:import.meta.url=__dirname --external:ref-napi",
    "play": "node dist/cli.cjs",
    "package": "pkg . --options no-deprecation"
  },
  "keywords": [
    "cli",
    "hexploration-cli",
    "hexploration"
  ],
  "author": "Max Meier",
  "license": "GPL-3.0",
  "dependencies": {
    "@luckymachines/game-core": "^0.0.56",
    "@metamask/sdk": "^0.2.4",
    "arg": "^5.0.1",
    "chalk": "^4.1.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "ethers": "^5.7.2",
    "ffi-napi": "^4.0.3",
    "inquirer": "^8.2.4",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1",
    "web3": "^1.7.3"
  },
  "engines": {
    "node": ">=18.15.0"
  },
  "pkg": {
    "assets": [
      "prebuilds/**/*.node",
      "node_modules/ref-napi/**/*"
    ],
    "outputPath": "dist-pkg"
  },
  "devDependencies": {
    "esbuild": "^0.18.19"
  }
}
