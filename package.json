{
  "name": "@luckymachines/hexploration-cli",
  "version": "0.0.1",
  "description": "A CLI to play Hexploration",
  "main": "dist/cli.cjs",
  "bin": {
    "hexploration-cli": "dist/cli.cjs",
    "hexploration-cli-local": "bin/hexploration-cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "esbuild src/cli.js --bundle --platform=node --outfile=dist/cli.cjs --define:import.meta.url=__dirname --minify"
  },
  "keywords": [
    "cli",
    "hexploration-cli",
    "hexploration"
  ],
  "author": "Max Meier",
  "license": "GPL-3.0",
  "dependencies": {
    "@luckymachines/game-core": "^0.0.41",
    "@metamask/sdk": "^0.2.4",
    "@truffle/hdwallet-provider": "^2.0.8",
    "arg": "^5.0.1",
    "chalk": "^4.1.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "ethers": "^5.7.2",
    "inquirer": "^8.2.4",
    "web3": "^1.7.3"
  },
  "pkg": {
    "assets": [
      "settings/**",
      "prebuilds/**/*.node"
    ],
    "outputPath": "dist-pkg"
  },
  "devDependencies": {
    "esbuild": "^0.17.18"
  },
  "engines": {
    "node": ">=18.15.0"
  }
}
